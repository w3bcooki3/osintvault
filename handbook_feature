                    <label>Content (Supports basic HTML/Markdown. For rich editing, integrate an editor.)</label>
                    <textarea id="noteContent" rows="15" class="editor-container"></textarea>
                </div>
                <div style="display: flex; gap: 10px; justify-content: flex-end; margin-top: 20px;">
                    <button type="button" class="btn btn-secondary" id="cancelAddNote">Cancel</button>
                    <button type="submit" class="btn btn-primary">Add Note</button>
                </div>
            </form>
        </div>
    </div>
    
    <div class="modal" id="editNoteModal">
        <div class="modal-content">
            <h3 style="margin-bottom: 20px; color: var(--primary);"><i class="fas fa-edit"></i> Edit Note</h3>
            <form id="editNoteForm">
                <input type="hidden" id="editNoteId">
                <div class="form-group">
                    <label>Note Title</label>
                    <input type="text" id="editNoteTitle" required>
                </div>
                <div class="form-group">
                    <label>Tags (comma separated)</label>
                    <input type="text" id="editNoteTags" placeholder="e.g., nmap, reconnaissance, projectX">
                </div>
                <div class="form-group">
                    <label>Content (Supports basic HTML/Markdown. For rich editing, integrate an editor.)</label>
                    <textarea id="editNoteContent" rows="15" class="editor-container"></textarea>
                </div>
